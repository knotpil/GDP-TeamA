# Handle line endings automatically
* text=auto

# Force Unity-specific files to use LF to prevent merge conflicts
*.cs text eol=lf
*.unity text eol=lf
*.asset text eol=lf
*.prefab text eol=lf
*.mat text eol=lf
*.meta text eol=lf
*.controller text eol=lf

# Denote all files that are truly binary and should not be modified
*.jpg binary
*.png binary
*.gif binary
*.psd binary
*.ai binary
*.pdf binary
*.fbx binary
*.obj binary
*.mp3 binary
*.ogg binary
*.wav binary